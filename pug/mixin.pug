        each s,index in subMenu
            if index>0
                span -
            p
                a(href="#")
                    label(for="modalEmail")=s
    .contact-menu__search
        input(type="text" placeholder="Tìm kiếm ở đây ...")  
        i.fas.fa-search
mixin loadMenu(menu,redWine)
    .menu 
        each m in menu
            a(href="#")
                span=m
        .menu__description
            each red,title in redWine
                .menu__description-item 
                    p.menu__description-title #{title}
                        .menu__description-detail
                            each r in red
                                p=r
            .menu__description-img
                img(src="../img/des-1.jpg")
