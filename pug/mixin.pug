mixin loadProduct(product)
    .newproduct 
        each p in product
            .newproduct__item 
                .newproduct__img
                    img(src=p.Img)
                    if p.Type != ""
                        if p.Type == "sale"
                            .newproduct__img-type.-sale
                                p=p.Type 
                        else if p.Type == "hot"
                            .newproduct__img-type.-hot
                                p=p.Type 
                        else 
                            .newproduct__img-type.-moi
                                p=p.Type 
                    .newproduct__img-sub 
                        .newproduct__img-sub-item
                            p 
                                i.fas.fa-heart
                                span Yêu thích 
                        .newproduct__img-sub-item
                            p 
                                i.fas.fa-signal
                                span So sánh 
                        .newproduct__img-sub-item
                            p 
                                i.fas.fa-compress-alt 
                .newproduct__info 
                    p.newproduct__info-name=p.Name
                    p.newproduct__info-price
                        span #{p.NewPrice}
                            small đ 
                        span -
                        del  #{p.OldPrice}
                            small đ
                    button.newproduct__info-btn add to cart
mixin loadGallery(gallery)
    each g in gallery
        .gallery__img 
            img(src=g)
            .gallery__brand
                p.gallery__brand-time 1987
                p.gallery__brand-name Rượu
mixin loadBlog(blogs)
    each b in blogs
        .blog__item
            .blog__item-img 
                img(src=b.Img)
                p
                    i.fas.fa-link
            p.blog__item-name= b.Name 
            .blog__item-sub 
                span.blog__item-author Đăng bởi #{b.Author}
                span.blog__item-time=b.Time
                span.blog__item-comment #{b.Comment} bình luận 
            p.blog__item-content=b.Content 
            a(href="#").blog__item-btn Read more
mixin loadProductOption(totalRedWine)
    .product__list
        each total,name in totalRedWine
            .product__item 
                p.product__item-name=name 
                ul 
                    each t in total 
                        li=t
mixin loadProductRow(productRow)
    .productRow
        each p in productRow 
            .productRow__item 
                .productRow__item-img 
                    img(src=p.Img)
                .productRow__item-info 
                    p.productRow__item-name=p.Name
                    p.productRow__item-price #{p.Price}
                        span đ
                    p.productRow__item-content=p.Content
                    .productRow__item-btn 
                        button add to cart
                        p 
                            i.fas.fa-heart
                            span Yêu thích 
                        p 
                            i.fas.fa-signal
                            span So sánh 